<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionFisica.TiempoConstante"
             Title="Tiempo constante"
             BackgroundColor="White">

    <VerticalStackLayout>
        <Frame BackgroundColor="#5e5d99" CornerRadius="0" Padding="0" HasShadow="True" HeightRequest="120"  VerticalOptions="Start">
            <VerticalStackLayout HorizontalOptions="Start">
                <Label 
                  x:Name="Tiempo"  
                  FontFamily="SimpleDay"
                  FontSize="24" 
                  TextColor="White" 
                  HorizontalOptions="Start" 
                  VerticalOptions="Start" />

                <Label
                  Text="Si te mueves a una velocidad constante, aquí podrás calcular tu tiempo de manera sencilla y precisa."        
                  FontSize="16"
                  SemanticProperties.Description="slogan"
                  TextColor="White"                
                  VerticalOptions="Start"
                  Margin="10,0,0,0" />
            </VerticalStackLayout>
        </Frame>
        <BoxView BackgroundColor="#f19f32" HeightRequest="2" HorizontalOptions="FillAndExpand" VerticalOptions="End" />
        <BoxView BackgroundColor="#5e5d99" CornerRadius="0,0,20,20" HeightRequest="30" VerticalOptions="End" />



        <VerticalStackLayout 
          Padding="30" 
          Spacing="20" 
          VerticalOptions="Center" 
          HorizontalOptions="Center">

            <!-- Entrada para Distancia -->
            <Frame 
              BackgroundColor="Transparent" 
              BorderColor="Transparent" 
              Padding="0">
                <VerticalStackLayout>
                    <Entry 
                     x:Name="DistanceEntry"                 
                     Placeholder="Distancia (metros)"
                     PlaceholderColor="Black"
                     Keyboard="Numeric"
                     WidthRequest="300"
                     HeightRequest="50"
                     HorizontalOptions="Center"
                     BackgroundColor="Transparent"
                     TextColor="Black" />

                    <BoxView 
                      HeightRequest="2" 
                      BackgroundColor="Black" 
                      HorizontalOptions="FillAndExpand" 
                      VerticalOptions="End" 
                      Margin="0,-9,0,0" />
                </VerticalStackLayout>
            </Frame>

            <!-- Entrada para  velocidad-->
            <Frame 
              BackgroundColor="Transparent" 
              BorderColor="Transparent" 
              Padding="0">
                <VerticalStackLayout>
                    <Entry 
                     x:Name="VelocidadEntry"
                     Placeholder="Velocidad m/s"
                     PlaceholderColor="Black"
                     Keyboard="Numeric"         
                     WidthRequest="300"
                     HeightRequest="50"
                     HorizontalOptions="Center"
                     BackgroundColor="Transparent"
                     TextColor="Black" />

                    <BoxView 
                      HeightRequest="2" 
                      BackgroundColor="Black" 
                      HorizontalOptions="FillAndExpand" 
                      VerticalOptions="End"
                      Margin="0,-9,0,0"/>
                </VerticalStackLayout>
            </Frame>


            <Frame 
              BackgroundColor="Transparent" 
              BorderColor="Transparent" 
              Padding="0">
                <VerticalStackLayout>
                    <Entry 
                     x:Name="ResultEntry"
                     Placeholder="Resultado"
                     PlaceholderColor="Black"
                     Keyboard="Numeric"         
                     WidthRequest="300"
                     HeightRequest="50"
                     HorizontalOptions="Center"
                     BackgroundColor="#b9b8f3"
                     TextColor="Black" />



                    <BoxView 
                     HeightRequest="2" 
                     BackgroundColor="Black" 
                     HorizontalOptions="FillAndExpand" 
                     VerticalOptions="End"
                     Margin="0,-9,0,0"/>
                </VerticalStackLayout>
            </Frame>


            <Button 
              x:Name="CalculateButton"
              Text="Calcular"
              FontFamily="OpenSans-Regular"
              FontSize="20"
              BackgroundColor="#f19f32"              
              SemanticProperties.Hint="Counts the number of times you click"
              Clicked="Button_Clicked_Tiempo"
              HorizontalOptions="Center" 
              WidthRequest="300" 
              HeightRequest="50"
              CornerRadius="25"
              Margin="0,10,0,0" />
        </VerticalStackLayout>




    </VerticalStackLayout>


</ContentPage>